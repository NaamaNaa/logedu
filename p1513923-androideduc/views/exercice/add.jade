extends ../base
block include-lib
    script(src='/public/js/exercice/create.js')


block title
block body
        script.
            numChapter = "#{numChapter}";
        .container
            form(id ="addForm" , method="post" , action="" ,class ="col s12" )
                .row
                    h1.center Nouveau Exercice

                .row
                    .input-field.col.s12
                        select#exerciceType
                            option(value='', disabled='', selected='') Veuillez choisir une valeur
                            each exerciceType in exerciceTypes
                                option(value='#{exerciceType.id}') #{exerciceType.name}
                        label Type d'exercice
                .row
                    .input-field.col.s12
                        select#nbQuestions
                            option(value='', disabled='', selected='') Veuillez choisir une valeur
                            option(value='1') 1
                            option(value='2') 2
                            option(value='3') 3
                            option(value='4') 4
                            option(value='5') 5
                            option(value='6') 6
                            option(value='7') 7
                            option(value='8') 8
                            option(value='9') 9
                            option(value='10') 10
                        label Number of Questions
                .row
                    .input-field.col.s12
                        input#statement.validate( type='text')
                        label(for='statement') Enonc√©
                .row
                    center
                        a#nextBtn.waves-effect.green.btn Suivant





